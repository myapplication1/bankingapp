@model IEnumerable<app.com.Data.app_branch>
@{
    ViewBag.Title = "Index";

}
<div class="loading-container">
    <div class="loader"></div>
</div>


@* new grid*@
<div class="row">
    <div class="widget-body">
        <div class="table-toolbar">
            <a id="editabledatatable_new" href="@Url.Action("Create", "bra")" class="btn btn-default">
                Add New Branch
            </a>
            <div class="btn-group pull-right">
                <a class="btn btn-default" href="javascript:void(0);">Tools</a>
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                <ul class="dropdown-menu dropdown-default">
                    <li>
                        <a href="javascript:void(0);">Action</a>
                    </li>
                    <li>
                        <a href="javascript:void(0);">Another action</a>
                    </li>
                    <li>
                        <a href="javascript:void(0);">Something else here</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);">Separated link</a>
                    </li>
                </ul>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered" id="editabledatatable_bra">
            <thead>
                <tr role="row">
                    <th>
                        ID
                    </th>
                    <th>
                        Branch Name
                    </th>
                    @*<th>
                            Customer Type
                        </th>*@
                    <th>
                        Address
                    </th>
                    <th>
                        Assets
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item_ in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item_.id)</td>
                        <td>@Html.DisplayFor(modelItem => item_.branch_name)</td>
                        <td class="center ">
                            @Html.DisplayFor(modelItem => item_.address1)  @Html.DisplayFor(modelItem => item_.address2) @Html.DisplayFor(modelItem => item_.state) @Html.DisplayFor(modelItem => item_.zip)
                            
                        </td>
                        <td>@Html.DisplayFor(modelItem => item_.assets)</td>


                        <td width="130">

                            <a href="@Url.Action("Edit", "bra", new { id = item_.id })" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i>Edit</a>
                            @*  <a href="@Url.Action("DelCustomer", "cus",new { id=item_.id })" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i>Delete</a>*@
                            <a href="@Url.Action("Details", "bra", new { id = item_.id })" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i>View</a>

                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>


@{
    ViewBag.Title = "Branch";
    ViewBag.Description = "Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScripts{
    <link href="~/assets/css/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/assets/js/datatable/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/datatable/ZeroClipboard.js"></script>
    <script src="~/assets/js/datatable/dataTables.tableTools.min.js"></script>
    <script src="~/assets/js/datatable/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/js/datatable/datatables-init.js"></script>
    <script>
        InitiateSimpleDataTable.init();
        InitiateEditableDataTable_bra.init_bra();
        InitiateExpandableDataTable.init();
        InitiateSearchableDataTable.init();
        InitiateExpandableDataTable.init();

    </script>
}