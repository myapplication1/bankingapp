                            <th>
                                Telephone
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item_ in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
    @*@Html.ActionLink(null, "Details", new { id = item_.cus_code } ,htmlAttributes: new {@class="typcn typcn-media-eject-outline"})*@
    <a href=@Url.Action("Details", "cus", new {id = item_.id  })><i class="typcn typcn-media-eject-outline"  title="View Customer"></i></a>

</td>
<td>
    @*@Html.ActionLink(null, "Edit", new { id = item_.cus_code }, htmlAttributes: new { @class = "typcn typcn-camera" })*@
    <a href=@Url.Action("EditCustomer", "cus", new {id = item_.id})><i class="typcn typcn-edit" title="Edit Customer"></i></a>

