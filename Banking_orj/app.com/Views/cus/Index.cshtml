<td class="center ">
    @Html.DisplayFor(modelItem => item_.full_name)

</td>
<td class="center ">
    @Html.DisplayFor(modelItem => item_.app_cus_type.type_name)

</td>
<td class="center ">
    @Html.DisplayFor(modelItem => item_.app_rel_office.full_name)

</td>
                                <td class="center ">
                                    @Html.DisplayFor(modelItem => item_.app_rel_office.full_name)

                                </td>
