    @Html.DisplayFor(modelItem => item_.created_date)

</td>
<td class="center ">
    @Html.DisplayFor(modelItem => item_.app_cus_contact.email)

</td>
<td class="center ">
    @Html.DisplayFor(modelItem => item_.app_cus_contact.tele_number)

</td>
                            </tr>





                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>





