@model IEnumerable<app.com.Data.app_imp_history>

@{
    ViewBag.Title = "Index";

}
<div class="loading-container">
    <div class="loader"></div>
</div>




   @* new grid*@

    <div class="row">

        <div class="widget-body">
            <div class="table-toolbar">
                <a id="editabledatatable_new" href="@Url.Action("CreateImport", "imp")" class="btn btn-default">
                    Create New Import
                </a>
                <div class="btn-group pull-right">
                    <a class="btn btn-default" href="javascript:void(0);">Tools</a>
                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu dropdown-default">
                        <li>
                            <a href="javascript:void(0);">Action</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);">Another action</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);">Something else here</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:void(0);">Separated link</a>
                        </li>
                    </ul>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered" id="editabledatatable">
                <thead>
                    <tr role="row">
                        <th>
                            ID
                        </th>
                        <th>
                            Import Name
                        </th>
                        @*<th>
                            Customer Type
                        </th>*@
                        <th>
                            Import Date
                        </th>
                        <th>
                            Importer
                        </th>
                        <th>
                           Progress
                        </th>
                        
                        <th>Line/Errors</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
@foreach (var item_ in Model)
{
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item_.id)</td>
                        <td>@Html.DisplayFor(modelItem => item_.imp_name)</td>
                        <td class="center ">
                            @Html.DisplayFor(modelItem => item_.imp_date)
                    </td>
                        <td>@Html.DisplayFor(modelItem => item_.importer)</td>
                        <td>@Html.DisplayFor(modelItem => item_.progress)</td>
                        <td>@Html.DisplayFor(modelItem => item_.imp_lines)/@Html.DisplayFor(modelItem => item_.imp_erros)</td>
                        <td>@Html.DisplayFor(modelItem => item_.status)</td>
                    
                       
                        <td width="100">

                            @*<a href="@Url.Action("EditCustomer", "cus", new { id = item_.id })" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i>Edit</a>*@
                          @*  <a href="@Url.Action("DelCustomer", "cus",new { id=item_.id })" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i>Delete</a>*@
                            <a href="@Url.Action("DetailsImport", "cus", new { id = item_.id })" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i>View</a>

                        </td>
                    </tr>
}
               
                </tbody>

            </table>
        </div>

    </div>




@{
    ViewBag.Title = "Customer";
    ViewBag.Description = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



